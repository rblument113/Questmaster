<h1>View Character</h1>
<div class="floatLeft">
<p><span>Name:</span>
    <%= @character.charname %>
</p>
<p><span>Race:</span>
    <%= @character.race %>
</p>
<p><span>Level:</span>
    <%= @character.level %>
</p>
<p><span>Class:</span>
    <%= @character.charclass %>
</p>
<p><span>Strength:</span>
    <%= @character.strength %><br>
    <span class="label">Modifier:</span>
    <%= ((@character.strength-10)/2).truncate %>
</p>
<p><span>Dexterity:</span>
    <%= @character.dexterity %><br>
    <span class="label">Modifier:</span>
    <%= ((@character.dexterity-10)/2).truncate %>
</p>
<p><span>Constitution:</span>
    <%= @character.constitution %><br>
    <span>Modifier:</span>
    <%= ((@character.constitution-10)/2).truncate %>
</p>
<p><spa>Wisdom:</span>
    <%= @character.wisdom %><br>
    <span class="label">Modifier:</span>
    <%= ((@character.wisdom-10)/2).truncate %>
</p>
<p><span>Intelligence:</span>
    <%= @character.intelligence %><br>
    <span class="label">Modifier:</span>
    <%= ((@character.intelligence-10)/2).truncate %>
</p>
<p><span>Charisma:</span>
    <%= @character.charisma %><br>
    <span>Modifier:</span>
    <%= ((@character.charisma-10)/2).truncate %>
</p>

<p></p>
<p>
    <%= link_to 'Back', controller:'characters'%>
</p>
</div>
<div class="floatRight">
<h2>Feats-</h2>
<% @character.feats.each do |feat|%>
    <p><span class="label">Name:</span>
    <%= feat.featname %>
    </p>
    <p><span class="label">Level Required:</span>
    <%= feat.level %>
    </p>
<% end %>
<div></div>
<h2>Add a Feat-</h2>
<%= form_for([@character, @character.feats.build]) do |f| %>
    <p>
    <%= f.label :featname%>
    <%= f.text_field :featname%>
    </p>
    <p>
    <%= f.label :level%>
    <%= f.text_field :level%>
    </p>
    <p>
    <%= f.submit%>
    </p>
<% end %>
</div>
